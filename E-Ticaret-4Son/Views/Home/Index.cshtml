@using E_Ticaret_4Son.Models;

@{
    ViewBag.Title = "Ana Sayfa";

    List<Kategoriler> KategoriListesi = ViewBag.KategoriListesi;
    List<Urunler> SonUrunler = ViewBag.SonUrunler;
    List<Kategoriler> SonKategoriler = ViewBag.SonKategoriler;

}


<!-- ========================= SECTION MAIN ========================= -->
<section class="section-main bg padding-y">
    <div class="container">

        <div class="row">
            <aside class="col-md-3">
                <nav class="card">
                    <ul class="menu-category">


                        @foreach (var item in SonKategoriler)
                        {

                            <li>@Html.ActionLink(item.KategoriAdı, "Kategori", new { id = item.KategoriID })</li>

                        }

                    </ul>
                </nav>
            </aside> <!-- col.// -->
            <div class="col-md-9">
                <article class="banner-wrap">

                    <div id="carousel1_indicator" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                            <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/Content/images/banners/mecolsoft (1).png" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/Content/images/banners/2.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/Content/images/banners/mecolsoft (3).png" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </article>
            </div> <!-- col.// -->
        </div> <!-- row.// -->
    </div> <!-- container //  -->
</section>
<!-- ========================= SECTION MAIN END// ========================= -->
<!-- ========================= SECTION  ========================= -->
<section class="section-name padding-y-sm">
    <div class="container">

        <header class="section-heading">
            <a href="#" class="btn btn-outline-primary float-right">Tümünü Gör</a>
            <h3 class="section-title">En Son Ürünler</h3>
        </header><!-- sect-heading -->


        <div class="row">
            @foreach (var item in SonUrunler)
            {
                <div class="col-md-3">
                    <figure class="card card-product-grid">
                        <span class="topbar">
                            <a href="" class="float-right"><i class="fa fa-heart"></i></a>
                        </span>
                        <a href="~/Home/Urun/@item.UrunID">
                            <div class="img-wrap" style="margin-bottom:5px;margin-top:5px;">
                                <img src="~/İmage/@(item.UrunID).jpg" />

                                <a class="btn-overlay" href="~/Home/Urun/@item.UrunID"><i class="fa fa-search-plus"></i>Detaylı İncele</a>
                            </div>
                        </a>
                        <figcaption class="info-wrap border-top">
                            <a href="~/Home/Urun/@item.UrunID" class="title"> <div style=" overflow: hidden;display:-webkit-box;-webkit-line-clamp:1; -webkit-box-orient: vertical;" class="entry-content"><p>@item.UrunAdı</p> </div></a>
                            <small class="text-muted" style="color:blue !important">@item.Kategoriler.KategoriAdı</small>
                            <div class="price mt-2">@item.UrunFiyati.ToString("0,0.") TL</div> <!-- price-wrap.// -->
                        </figcaption>
                    </figure> <!-- card // -->
                </div>
            }

        </div> <!-- row.// -->

    </div><!-- container // -->
</section>
<!-- ========================= SECTION  END// ========================= -->